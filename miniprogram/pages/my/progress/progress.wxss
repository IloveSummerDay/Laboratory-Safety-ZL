page{
  display: flex;
  flex-direction: column;
}
.top_box{
  width: 100%;
  height: 35%;
  display: flex;
}
.top_box text{
  display: inline-block;
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.progress_box{
  margin-top: 50rpx;
  flex: 1;
}

.know_progress_box, .identifying_progress_box, 
.system_progress_box{
  width: 80%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin: 0 auto;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  border-bottom: 1px solid #ccc;
}
.system_progress_box{
  border: none;
}
text {
  color: black;
  font-weight: bold;
  font-family: "微软雅黑";
  font-size: 40rpx;
  width: 200rpx;
}
.top_box text{
  text-align: left;
  font-size: 30rpx;
}
ec-canvas {
  width: 100%;
  height: 100%;
}