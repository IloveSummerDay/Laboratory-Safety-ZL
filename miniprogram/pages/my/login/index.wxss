/* pages/my/login/index.wxss */
page {
  position: relative;
}
.input_box {
  width: 90%;
  margin: 0 auto;
  padding-top: 40rpx;
}
.account_input,
.password_input {
  margin-top: 40rpx;
  --td-input-bg-color: none;
  --td-input-border-color: #ccc;
  --td-input-vertical-padding: 32rpx;
}
.forget_box {
  display: flex;
  justify-content: space-between;
  padding: 60rpx 0 20rpx 20rpx;
}
.forget_password {
  color: rgba(0, 0, 0, 0.5);
}
.forget_password:active,
.login:active {
  color: #ccc;
}
.login {
  color: rgba(189, 185, 185, 0.8);
  text-decoration: underline;
}
.login_btn {
  margin-top: 60rpx;
  --td-button-primary-bg-color: rgba(16, 90, 157, 1);
  --td-button-border-width: 0;
}
