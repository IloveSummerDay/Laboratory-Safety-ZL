page {
  background: #f8f8f8;
}
.home {
  position: relative;
}
.showcase {
  padding: 0 40rpx 0 40rpx;
  height: 750rpx;
}

.operations {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-wrap: wrap;
  padding-left: 20px;
  padding-right: 20px;
  margin-top: 20px;
  animation: fade-in 0.5s ease;
}

.op {
  display: block;
  padding: 9px 18px;
  color: rgb(184, 184, 190);
  border: 2px solid rgb(184, 184, 190);
  border-radius: 6px;
  margin-right: 10px;
  margin-bottom: 20px;
  transition: all 0.3s ease;
  font-weight: bold;
}

.op.active {
  color: rgb(44, 80, 145);
  border-color: rgb(44, 80, 145);
}

.bottom_button_box {
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom_button {
  width: 600rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(255, 255, 255, 1);
  background-color: rgb(44, 80, 145);
  border-radius: 9rpx;
  font-size: 30rpx;
  box-shadow: 0rpx 12rpx 12rpx 0rpx rgba(96, 157, 243, 0.09);
  text-align: center;
  font-weight: bold;
}
.progress_box {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
#prg {
  width: 90%;
  animation: fade-in 0.5s ease;
}

@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
