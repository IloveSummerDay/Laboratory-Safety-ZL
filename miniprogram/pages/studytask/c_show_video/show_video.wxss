.operations {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding-left: 20px;
  padding-right: 20px;
  margin-top: 20px;
  animation: fade-in .5s ease;
}

.op {
  display: block;
  padding: 9px 18px;
  color: rgb(184, 184, 190);
  border: 2px solid rgb(184, 184, 190);
  border-radius: 6px;
  margin-right: 10px;
  margin-bottom: 20px;
  transition: all .3s ease;
  font-weight: bold;
}

.op.active {
  color: rgb(44, 80, 145);
  border-color: rgb(44, 80, 145);
}

.bottom_button{
  position: absolute;
  width: 188rpx;
	height: 70rpx;
	left: 538rpx;
	top: 1232rpx;
	color: rgba(255, 255, 255, 1);
	background-color: rgb(44, 80, 145);
	border-radius: 9rpx;
	font-size: 28rpx;
	line-height: 250%;
	box-shadow: 0rpx 12rpx 12rpx 0rpx rgba(96, 157, 243, 0.09);
	text-align: center;
	font-weight: bold;
}

#prg {
  margin-top: 20px;
  animation: fade-in .5s ease;
  width: 85%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
}

@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}