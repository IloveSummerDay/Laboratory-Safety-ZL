/* pages/studytask/d_drypowderfire_extinguisher/drypowderfire_extinguishe.wxss */
/* 直接设置页面背景 */
page {
  background: #f8f8f8;
}
.drypowder_text {
  text-align: center;
  color: rgba(80, 80, 80, 1);
  font-size: 29rpx;
}
.drypowder_top {
  width: 704rpx;
  background-color: white;
  /* height: 534rpx; */
  border-radius: 9rpx;
  margin-left: 25rpx;
  margin-top: 20rpx;
  box-shadow: 0rpx 12rpx 12rpx 0rpx rgba(0, 0, 0, 0.03);
}
.drypowder_top image {
  width: 523rpx;
  height: 571rpx;
  margin-left: 90rpx;
  margin-top: 39rpx;
}
/* 灭火器使用方法 */
.drypowder_bottom {
  padding: 20rpx 40rpx 0 40rpx;
}
.bold {
  font-weight: bold;
}
.text_indent {
  text-indent: 2em;
}
/* 按钮 */
.drypowder_btn {
  height: 160rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.drypowder_back,
.drypowder_detail {
  height: 80rpx;
  width: 300rpx;
  color: rgba(255, 255, 255, 1);
  background-color: rgba(44, 80, 145, 1);
  border-radius: 9rpx;
  font-size: 28rpx;
  box-shadow: 0rpx 12rpx 12rpx 0rpx rgba(0, 0, 0, 0.03);
  display: flex;
  justify-content: center;
  align-items: center;
}
