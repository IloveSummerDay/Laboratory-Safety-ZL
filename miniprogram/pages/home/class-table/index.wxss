/* pages/home/safety-manual/class-table/index.wxss */
page {
  display: flex;
  flex-direction: column;
}
video {
  width: 100%;
  /* height: 400rpx; */
}
.nav_bar {
  --td-tab-bar-height: 80rpx;
}
.class_list {
  width: 100%;
}
.class_item {
  width: 90%;
  height: 80rpx;
  background-color: white;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  position: relative;
  align-items: center;
  border-radius: 20rpx;
}
.class_item:active {
  background-color: rgb(241, 241, 241);
}
.class_item text {
  position: absolute;
  left: 30rpx;
}
image {
  position: absolute;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
}
